<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="247dp"
        android:layout_height="296dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/detail_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[11]" />

    <TextView
        android:id="@+id/detail_plot"
        android:layout_width="391dp"
        android:layout_height="156dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_poster" />

    <TextView
        android:id="@+id/detail_rating"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detail_release"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_stars" />

    <ImageView
        android:id="@+id/detail_stars"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toTopOf="@+id/detail_rating"
        app:layout_constraintStart_toEndOf="@+id/detail_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[6]" />

    <TextView
        android:id="@+id/detail_release"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_poster"
        app:layout_constraintTop_toBottomOf="@+id/detail_rating" />
</android.support.constraint.ConstraintLayout>